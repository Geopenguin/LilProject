// Authorization token that must have been created previously. See : https://developer.spotify.com/documentation/web-api/concepts/authorization
const token = 'BBQBW-MsQjl5VRkDlzeBlY9X5RvoJPo8Kt_XtuIYU0rhV-Vf5CZPB9JTaJpdNA65vg-NE3YL9-Ov9ldSc2Z67SsDfZQvqu5eJyUwYG7HM0TtnahJqbdWZFid742FueJ-8-uBqunL7nXAQDcTPk-olhpkK-HpvXm30EQnbaSoDWjqpY1RkxvmODl6RXfugtoOYFwlPWD_FIBkmNB-6LvjrQNRsVTB3WFzV_mvaOvZjcOMVPZRSZzjrt-i4aWicmiSf2hD76DHNQArPW0yaWABXvtqabFXoWn_VjNfj3HYeagTexzOU0yRgSJsFSIYr1aOLlWtESIAdKYWwYq5U8GhL58oENpxO9y0vCi5h_5raalMgSOFKZHe9V1RW0QHZg-FKPEPFE1EVsCunslILL4vRdEDVazKSipfJYB7TUcsJ8ks14jFKn-Dg';
async function fetchWebApi(endpoint, method, body) {
  const res = await fetch(`https://api.spotify.com/${endpoint}`, {
    headers: {
      Authorization: `Bearer ${token}`,
    },
    method,
    body:JSON.stringify(body)
  });
  return await res.json();
}

async function getTopTracks(){
  // Endpoint reference : https://developer.spotify.com/documentation/web-api/reference/get-users-top-artists-and-tracks
  return (await fetchWebApi(
    'v1/me/top/tracks?time_range=long_term&limit=5', 'GET'
  )).items;
}

const topTracks = await getTopTracks();
console.log(
  topTracks?.map(
    ({name, artists}) =>
      `${name} by ${artists.map(artist => artist.name).join(', ')}`
  )
);